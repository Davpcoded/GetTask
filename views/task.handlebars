<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s12 m2">
      </div>
      <div class="col s12 m8">
        <h5>Task # <span id="taskId">{{id}}</span> - {{taskTitle}}</h5>
        </br>
        </br>
        <div class="row">
          <div class="row">
            <div class="col s9">
              <p>{{taskDesc}}</p>
            </div>
            <div class="col s1"></div>
            <div class="col s2">
              <form class="col s12"></form>
              <h6>Estimated Completion Time:</h6>
              <input id="formDate" type="text" class="datepicker" placeholder="{{estCompletion}}">
              <button id="btnSave" class="btn waves-effect waves-light" type="submit">Save</button>
              </form>
            </div>
          </div>
        </div>
        </br>
        </br>
        <div class="row">
          <div class="col s3">
            <button id="btnBack" class="btn waves-effect waves-light" type="submit">Back
            </button>
          </div>
          <div class="col s1">
          </div>
          <div class="col s3">
          </div>
        </div>
        </br>
        <div class="row">
          <div class="col s3">
            <button id="btnAssign" class="btn waves-effect waves-light" type="submit">Assign to Me
            </button>
          </div>
          <div class="col s1">
          </div>
          <div class="col s3">
            <button id="btnComplete" class="btn waves-effect waves-light" type="submit">Complete
            </button>
          </div>
        </div>
      </div>
      <div class="col s12 m2">
      </div>
    </div>
  </div>
</div>