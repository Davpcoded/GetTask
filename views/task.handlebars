<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s12 m2">
      </div>
      <div class="col s12 m8">
        <h5>Task # {{id}} - {{taskTitle}}</h5>
        </br>
        </br>
        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="col s9">
                <p>{{taskDesc}}</p>
              </div>
              <div class="col s1"></div>
              <div class="col s2">
                <h6>Estimated Completion Time:</h6>
                <input type="text" class="datepicker" placeholder="{{estCompletion}}">
                <button class="btn waves-effect waves-light" type="submit" name="action">Save</button>
              </div>
            </div>
          </form>
        </div>
        </br>
        </br>
        <div class="row">
          <div class="col s3">
            <button class="btn waves-effect waves-light" type="submit" name="action">Cancel
            </button>
          </div>
          <div class="col s1">
          </div>
          <div class="col s3">
          </div>
        </div>
        </br>
        <div class="row">
          <div class="col s3">
            <button class="btn waves-effect waves-light" type="submit" name="action">Assign to Me
            </button>
          </div>
          <div class="col s1">
          </div>
          <div class="col s3">
            <button class="btn waves-effect waves-light" type="submit" name="action">Complete
            </button>
          </div>
        </div>
      </div>
      <div class="col s12 m2">
      </div>
    </div>
  </div>
</div>